@using DelliItalia_Razor.ViewModel
@model List<UserRoleViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    var rollId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Användare och Roller/Behörighet</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserName"/>
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input asp-for="@Model[i].IsSelected"
                       type="checkbox" class="form-check-input" />
                <label class="form-check-label"
                       asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" style="width:auto" class="btn btn-primary" value="Uppdatera" />
            <a class="btn btn-primary" href="~/WebAdmin/AdminIndexUsers">Avbryt</a>
        </div>
    </div>
</form>