@page
@model EditRollsModel
@using DelliItalia_Razor.ViewModel
@using DelliItalia_Razor.Model
@inject RoleManager<IdentityRole> rolMan
@inject UserManager<WebshopUser> userMan
@{
    var vd = ViewData["Roll"] as EditRoleViewModel;
    var userVD = ViewData["UserInRole"] as UserRoleViewModel;  
}
<h1>Ändra Roll/Behörighet</h1>

<form method="post" class="mt-3">


    <div class="form-group row">
        <label asp-for="@vd.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@vd.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@vd.RollName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@vd.RollName" disabled class="form-control" />
            <span asp-validation-for="@vd.RollName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
           
            <a asp-page="AdminIndexUsers" class="btn btn-primary">Avbryt</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Användare i denna roll</h3>
        </div>
        <div class="card-body">

            @if (userMan.Users.Any())
            {
                foreach (var user in userMan.Users)
                {
                    var inRole = await userMan.IsInRoleAsync(user, Model.RollNamn);
                    if (inRole)
                    {
                        <div class="card-title">
                            <h5>
                                <input type="hidden" asp-for="@user.Id" />
                                <input type="checkbox" checked="checked" asp-for="@inRole" />
                                @user.FirstName @user.LastName
                            </h5>
                        </div>
                    }
                }
            }
            else
            {
                <h5>Inga användare i denna roll</h5>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Ändra behörighet</button>
        </div>
    </div>
</form>
<form method="post"  class="mt-3">
    <div class="card">
        <div class="card-header">
            <h3>Övriga Användare</h3>
        </div>
        <div class="card-body">

            @if (userMan.Users.Any())
            {
                foreach (var user in userMan.Users)
                {
                    var notInRole = await userMan.IsInRoleAsync(user, Model.RollNamn);
                    if (!notInRole)
                    {
                        <div class="card-title">
                            <h6 style="color:gray">
                                <input type="hidden" asp-for="@user.Id" />
                                <input type="checkbox" asp-for="@notInRole" />
                                @user.FirstName @user.LastName @user.Email                               
                            </h6>
                        </div>
                    }
                }
            }
            else
            {
                <h5>Inga användare i denna roll</h5>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Ändra behörighet</button>
        </div>
    </div>
</form>
