@page
@model DelliItalia_Razor.Pages.WebAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h1>Lägg till produkt</h1>
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table cellpadding="10" width="700px">
                <div class="form-group">
                    <label asp-for="ProductModel.PhotoAdress" class="control-label"></label>
                    <input asp-for="ProductModel.PhotoAdress" class="form-control" />
                    <span asp-validation-for="ProductModel.PhotoAdress" class="text-danger"></span>
                </div>
                <td width="300px">
                    <div class="form-group">
                        <label asp-for="ProductModel.Name" class="control-label"></label>
                        <input asp-for="ProductModel.Name" class="form-control" />
                        <span asp-validation-for="ProductModel.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Price" class="control-label"></label>
                        <input asp-for="ProductModel.Price" class="form-control" />
                        <span asp-validation-for="ProductModel.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Description" class="control-label"></label>
                        <input asp-for="ProductModel.Description" class="form-control" />
                        <span asp-validation-for="ProductModel.Description" class="text-danger"></span>
                    </div>
                </td>
                <td width="300px">
                    <div class="form-group">
                        <label asp-for="ProductModel.Category" class="control-label"></label>
                        <input asp-for="ProductModel.Category" class="form-control" />
                        <span asp-validation-for="ProductModel.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Sale" class="control-label"></label>
                        <input asp-for="ProductModel.Sale" class="form-control" />
                        <span asp-validation-for="ProductModel.Sale" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Sale_Percent" class="control-label"></label>
                        <input asp-for="ProductModel.Sale_Percent" class="form-control" />
                        <span asp-validation-for="ProductModel.Sale_Percent" class="text-danger"></span>
                    </div>
                </td>
                <td width="300px">

                    <div class="form-group">
                        <label asp-for="ProductModel.DateIn" class="control-label"></label>
                        <input asp-for="ProductModel.DateIn" class="form-control" />
                        <span asp-validation-for="ProductModel.DateIn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Quantity" class="control-label"></label>
                        <input asp-for="ProductModel.Quantity" class="form-control" />
                        <span asp-validation-for="ProductModel.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductModel.Chosen" class="control-label"></label>
                        <input asp-for="ProductModel.Chosen" class="form-control" />
                        <span asp-validation-for="ProductModel.Chosen" class="text-danger"></span>
                    </div>
                </td>
            </table>
            <div class="form-group">
                <input type="submit" value="Lägg till produkt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tillbaka till Admin</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
